<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:orientation="horizontal"
    android:id="@+id/action_bar">
    <ImageButton
        android:id="@+id/drawer_buttton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_drawer_l"
        android:layout_weight="1"
        style="?android:borderlessButtonStyle"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_weight="25"
        android:textColor="@android:color/white"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="visible"/>
    <Spinner
        android:id="@+id/tab_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_weight="25"
        android:background="@drawable/item_backgrund"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:visibility="gone"></Spinner>
    <ProgressBar
        android:background="@drawable/listitem1"
        android:layout_weight="1"
        android:visibility="gone"
        android:indeterminate="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        />
        <ImageButton
            android:background="@drawable/listitem1"
            android:layout_weight="1"
            android:visibility="gone"
            style="?android:borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/paste"
            android:src="@drawable/ic_action_paste"
            />
    <ImageButton
        android:background="@drawable/listitem1"
        android:layout_weight="1"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/action_overflow"
        android:src="@drawable/ic_action_overflow"
        />
    </LinearLayout>
<FrameLayout
    android:id="@+id/buttonbarframe"
    android:layout_below="@id/action_bar"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent">
        <LinearLayout
            android:id="@+id/pathbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="?android:attr/actionBarSize"
                android:src="@drawable/ic_drawer_l"
                android:layout_weight="1"
                android:visibility="invisible"
                android:clickable="false"
                style="?android:borderlessButtonStyle"/>
            <LinearLayout
                android:clickable="false"
                android:layout_weight="20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:clickable="false"
                android:layout_width="wrap_content"
                android:textSize="18sp"
               style="@android:style/TextAppearance.Large"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:id="@+id/pathname" />
                <HorizontalScrollView
                    android:scrollbars="none"
                    android:clickable="false"
                    android:id="@+id/scroll1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    style="@android:style/TextAppearance.Small"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:id="@+id/fullpath" />
            </HorizontalScrollView>
            </LinearLayout>
            </LinearLayout>


        <HorizontalScrollView
            android:scrollbars="none"
            android:id="@+id/scroll"
			android:paddingBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                </LinearLayout>
        </HorizontalScrollView>


</FrameLayout>

        <!--
         As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions.
        -->

        <FrameLayout
            android:layout_below="@id/buttonbarframe"
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="7dp"
            android:id="@+id/shadow"
            android:src="@drawable/shadow"
            android:layout_below="@id/buttonbarframe"
            android:adjustViewBounds="false" />
        <com.faizmalkani.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabbutton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_below="@id/buttonbarframe"
            android:layout_marginTop="-28dp"
            android:layout_marginLeft="12dp"
            />
    </RelativeLayout>

    <!--
         android:layout_gravity="start" tells DrawerLayout to treat
         this as a sliding drawer on the left side for left-to-right
         languages and on the right side for right-to-left languages.
         The drawer is given a fixed width in dp and extends the full height of
         the container. A solid background is used for contrast
         with the content view.
    -->
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:id="@+id/left_drawer"
        android:layout_gravity="start"
        >
        <LinearLayout
            android:id="@+id/drawerheader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:padding="5dp"
            android:clickable="false">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:clickable="false"
                android:padding="5dp"
                android:src="@drawable/ic_launcher1"
                android:gravity="center_vertical"
                android:contentDescription="@string/icon" />

            <TextView
                android:id="@+id/firstline"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/icon"
                android:layout_height="fill_parent"
                android:clickable="false"
                style="@android:style/TextAppearance.Medium.Inverse"
                android:text="Amaze File Manager"
                android:gravity="center_vertical" />
        </LinearLayout>
    <ListView
        android:id="@+id/menu_drawer"
        style="@android:style/Theme.Holo.Light"
        android:layout_width="250dp"
        android:layout_below="@id/drawerheader"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/drawer_bg"
        android:choiceMode="singleChoice"
        android:dividerHeight="0dip" />
        <LinearLayout
            android:id="@+id/settings_bg"
            android:layout_alignParentBottom="true"
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/actionBarSize">
        <ImageButton
            android:id="@+id/settingsbutton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/listitem1"
            android:src="@drawable/ic_action_settings"
            /></LinearLayout>
    </RelativeLayout>
    <!--
    <ListView
        android:id="@+id/right_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:choiceMode="singleChoice"
		android:background="@drawable/drawer_bg"
        android:dividerHeight="0dip"

		style="@android:style/Theme.Holo.Light"
	/>
    -->

</android.support.v4.widget.DrawerLayout>
