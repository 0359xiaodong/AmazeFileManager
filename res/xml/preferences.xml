<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/theme"
        android:entryValues="@array/ints"
        android:key="theme"
        android:title="@string/theme" />
    <Preference
        android:key="skin"
        android:title="@string/skin" />

    <PreferenceCategory android:title="File Explorer">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="showThumbs"
            android:summary="Show Thumbnails of apps and images"
            android:title="Show Thumbnails" />
		<CheckBoxPreference
            android:defaultValue="true"
            android:key="showHidden"
          
            android:title="Show Hidden Files and Folders" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="showPermissions"
            android:summary="Show Permissions of Files and Folders"
            android:title="Show Permissions" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="showLastModified"
            android:summary="Show the date and time when then fle was modified last time"
            android:title="Show Last Modified" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="showFileSize"
            android:summary="Show size of files and number of items in folders"
            android:title="Show Sizes" />
	  	<CheckBoxPreference
            android:defaultValue="false"
            android:key="rememberLastPath"

            android:title="Remember Last Path" />
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/uimode"
            android:entryValues="@array/ints"
            android:key="uimode"
            android:summary="Choose Item Ui"
            android:title="@string/uimode" />
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/directorysortmode"
            android:entryValues="@array/ints1"
            android:key="dirontop"
            android:title="@string/directorysort" />


        <ListPreference
            android:defaultValue="0"
            android:entries="@array/sortby"
            android:entryValues="@array/ints2"
            android:key="sortby"
            android:title="@string/sortby" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="rootmode"
            android:summary="@string/rootmodesummary"
            android:title="@string/rootmode" />
    
    </PreferenceCategory>

    </PreferenceScreen>